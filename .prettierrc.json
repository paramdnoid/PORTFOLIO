{
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "^next",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/types(.*)",
    "^@/config(.*)",
    "^@/lib(.*)",
    "^@/i18n(.*)",
    "^@/components(.*)",
    "^@/app(.*)",
    "",
    "^[./]"
  ]
}
