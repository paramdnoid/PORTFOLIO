{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Andre",
  "repository": {
    "type": "git",
    "url": "https://github.com/andre/portfolio"
  },
  "packageManager": "npm@11.3.0",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow npm",
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:a11y": "vitest run --testPathPattern=a11y",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check": "tsc --noEmit && eslint && prettier --check .",
    "docker:build": "docker build -f docker/Dockerfile -t portfolio .",
    "preview": "next build && next start",
    "generate:locales": "tsx scripts/generate-locales.ts",
    "docs:api": "typedoc",
    "fresh": "rm -rf node_modules .next out dist package-lock.json && npm install",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^react",
      "^next",
      "",
      "<THIRD_PARTY_MODULES>",
      "",
      "^@/types(.*)",
      "^@/config(.*)",
      "^@/lib(.*)",
      "^@/i18n(.*)",
      "^@/components(.*)",
      "^@/app(.*)",
      "",
      "^[./]"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-max-length": [
        2,
        "always",
        100
      ],
      "body-max-line-length": [
        2,
        "always",
        200
      ]
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,mts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/nextjs": "10.38.0",
    "@vercel/analytics": "1.6.1",
    "@vercel/speed-insights": "1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.564.0",
    "motion": "^12.34.0",
    "next": "16.1.6",
    "next-intl": "^4.8.2",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "axe-core": "^4.11.1",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "25.0.3",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typedoc": "0.28.17",
    "typescript": "^5",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
